<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tab_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tab_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center"/>

    <View
        style="@style/KwDotTip"
        android:id="@+id/tab_item_redhot"
        android:layout_width="@dimen/search_list_header_marginBottom"
        android:layout_height="@dimen/search_list_header_marginBottom"
        android:layout_alignTop="@id/tab_item_title"
        android:layout_toRightOf="@id/tab_item_title"
        android:visibility="gone"/>

</RelativeLayout>
